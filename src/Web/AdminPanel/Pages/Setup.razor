@page "/setup"

<PageTitle>OpenMU: Setup</PageTitle>
<Breadcrumb IsFirstFromRoot="true" Caption="Setup"/>

<div class="min-h-screen bg-white dark:bg-slate-900 py-6">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-slate-900 dark:text-white flex items-center gap-3 mb-2">
            <span class="text-3xl">⚙️</span>
            Database Setup
        </h1>
        <p class="text-slate-600 dark:text-slate-400 text-lg">Configure and initialize your OpenMU database</p>
    </div>

    <div class="space-y-6">
        @if (this.ShowInstall)
        {
            <Install InstallationFinished="() => this.ShowInstall = false" />
        }
        else
        {
            <!-- Status Cards -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Database Status Card -->
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 @GetDatabaseBorderClass() p-6">
                    <div class="flex items-start gap-4 mb-4">
                        <div class="text-5xl">@GetDatabaseIcon()</div>
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">Database Status</h3>
                            @if (!this.SetupService.CanConnectToDatabase)
                            {
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                                    <span class="px-3 py-1 bg-red-100 dark:bg-red-900/50 text-red-700 dark:text-red-300 rounded-full text-sm font-semibold">
                                        Cannot Connect
                                    </span>
                                </div>
                                <p class="text-slate-600 dark:text-slate-400 text-sm">Unable to establish connection. The database may not be created yet.</p>
                            }
                            else if (!this.SetupService.IsInstalled)
                            {
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
                                    <span class="px-3 py-1 bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300 rounded-full text-sm font-semibold">
                                        Not Initialized
                                    </span>
                                </div>
                                <p class="text-slate-600 dark:text-slate-400 text-sm">Database is reachable but hasn't been initialized with game data.</p>
                            }
                            else if (this.SetupService.IsUpdateRequired)
                            {
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
                                    <span class="px-3 py-1 bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300 rounded-full text-sm font-semibold">
                                        Update Required
                                    </span>
                                </div>
                                <p class="text-slate-600 dark:text-slate-400 text-sm">Your database schema needs to be updated to the latest version.</p>
                            }
                            else
                            {
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                                    <span class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/50 text-emerald-700 dark:text-emerald-300 rounded-full text-sm font-semibold">
                                        Up-to-date
                                    </span>
                                </div>
                                <p class="text-slate-600 dark:text-slate-400 text-sm">Database is properly configured and running the latest schema.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Game Version Status Card -->
                @if (this.SetupService.IsInstalled && !this.SetupService.IsUpdateRequired)
                {
                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-cyan-200 dark:border-cyan-700 p-6">
                        <div class="flex items-start gap-4 mb-4">
                            <div class="text-5xl">🎮</div>
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">Game Version</h3>
                                @if (!this._isDataInitialized)
                                {
                                    <div class="flex items-center gap-2 mb-3">
                                        <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
                                        <span class="px-3 py-1 bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300 rounded-full text-sm font-semibold">
                                            No Data Found
                                        </span>
                                    </div>
                                    <p class="text-slate-600 dark:text-slate-400 text-sm">The database is empty. Please initialize game data.</p>
                                }
                                else
                                {
                                    <div class="flex items-center gap-2 mb-3">
                                        <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                                        <span class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/50 text-emerald-700 dark:text-emerald-300 rounded-full text-sm font-semibold">
                                            @this._gameClientVersion
                                        </span>
                                    </div>
                                    <p class="text-slate-600 dark:text-slate-400 text-sm">Game data has been initialized and is ready for use.</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-6">
                @if (!this.SetupService.CanConnectToDatabase || !this.SetupService.IsInstalled)
                {
                    <div class="flex items-center justify-between p-6 bg-gradient-to-r from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 border-2 border-blue-200 dark:border-blue-700 rounded-lg">
                        <div class="flex items-center gap-4">
                            <div class="text-4xl">🚀</div>
                            <div>
                                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-1">Create Database</h3>
                                <p class="text-slate-600 dark:text-slate-400">Initialize a new OpenMU database with default game configuration</p>
                            </div>
                        </div>
                        <button class="px-6 py-3 bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all flex items-center gap-2" @onclick="this.OnInstallClick">
                            <span>Start Setup</span>
                            <span class="text-xl">→</span>
                        </button>
                    </div>
                }
                else if (this.SetupService.IsUpdateRequired)
                {
                    <div class="flex items-center justify-between p-6 bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 border-2 border-amber-200 dark:border-amber-700 rounded-lg">
                        <div class="flex items-center gap-4">
                            <div class="text-4xl">⬆️</div>
                            <div>
                                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-1">Update Database</h3>
                                <p class="text-slate-600 dark:text-slate-400">Apply the latest schema migrations to your database</p>
                            </div>
                        </div>
                        <button class="px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all flex items-center gap-2" @onclick="this.OnUpdateClickAsync">
                            <span>Apply Updates</span>
                            <span class="text-xl">→</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="flex items-center justify-between p-6 bg-gradient-to-r from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 border-2 border-red-200 dark:border-red-700 rounded-lg">
                        <div class="flex items-center gap-4">
                            <div class="text-4xl">🔄</div>
                            <div>
                                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-1">Re-install Database</h3>
                                <p class="text-red-600 dark:text-red-400 font-semibold">⚠️ This will delete all existing data and create a fresh installation</p>
                            </div>
                        </div>
                        <button class="px-6 py-3 bg-gradient-to-r from-red-500 to-rose-500 hover:from-red-600 hover:to-rose-600 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all flex items-center gap-2" @onclick="this.OnReInstallClickAsync">
                            <span>Re-install</span>
                            <span class="text-xl">→</span>
                        </button>
                    </div>
                }
            </div>

            <!-- Help Section -->
            <div class="bg-gradient-to-r from-cyan-50 to-blue-50 dark:from-cyan-900/20 dark:to-blue-900/20 rounded-xl shadow-lg border border-cyan-200 dark:border-cyan-700 p-6">
                <div class="flex items-start gap-4">
                    <div class="text-4xl">💡</div>
                    <div>
                        <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-3">Need Help?</h4>
                        <ul class="space-y-2 text-slate-600 dark:text-slate-400">
                            <li class="flex items-start gap-2">
                                <span class="text-cyan-500 mt-1">•</span>
                                <span>Make sure PostgreSQL is running and accessible</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-cyan-500 mt-1">•</span>
                                <span>Check your connection string in appsettings.json</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-cyan-500 mt-1">•</span>
                                <span>Ensure you have sufficient database permissions</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-cyan-500 mt-1">•</span>
                                <span>Backup your data before re-installing</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string GetDatabaseBorderClass()
    {
        if (!this.SetupService.CanConnectToDatabase)
            return "border-red-200 dark:border-red-700";
        if (!this.SetupService.IsInstalled)
            return "border-amber-200 dark:border-amber-700";
        if (this.SetupService.IsUpdateRequired)
            return "border-amber-200 dark:border-amber-700";
        return "border-emerald-200 dark:border-emerald-700";
    }

    private string GetDatabaseIcon()
    {
        if (!this.SetupService.CanConnectToDatabase)
            return "❌";
        if (!this.SetupService.IsInstalled)
            return "⚠️";
        if (this.SetupService.IsUpdateRequired)
            return "⚠️";
        return "✅";
    }
}
