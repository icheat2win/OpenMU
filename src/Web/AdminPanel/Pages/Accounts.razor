@page "/accounts"
@using MUnique.OpenMU.Web.AdminPanel.Services
@using MUnique.OpenMU.DataModel.Entities;
@using MUnique.OpenMU.Persistence;

@inject AccountService _accountService;
@implements IDisposable

<PageTitle>OpenMU: Accounts</PageTitle>
<Breadcrumb IsFirstFromRoot="true" Caption="Accounts" />

<div class="min-h-screen bg-white dark:bg-slate-900 py-6">
    <div class="max-w-7xl mx-auto px-4">
        <!-- Header Section -->
        <div class="mb-8 flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-bold text-slate-900 dark:text-white flex items-center gap-3 mb-2">
                    <span class="oi oi-people text-primary-500" aria-hidden="true"></span>
                    Account Management
                </h1>
                <p class="text-slate-600 dark:text-slate-400 text-lg">Manage player accounts, credentials, and user status</p>
            </div>
            <button type="button" 
                    class="px-4 py-2 bg-gradient-to-r from-primary-500 to-primary-700 hover:from-primary-600 hover:to-primary-800 text-white rounded-lg shadow-md hover:shadow-lg transition-all flex items-center gap-2 font-semibold" 
                    @onclick="@this._accountService.CreateNewInModalDialogAsync">
                <span class="oi oi-plus" aria-hidden="true"></span>
                <span class="hidden md:inline">Create Account</span>
            </button>
        </div>

        @if (_isLoading)
        {
            <!-- Loading State -->
            <div class="flex items-center justify-center py-20">
                <div class="text-center">
                    <div class="relative inline-block">
                        <div class="w-16 h-16 border-4 border-slate-200 dark:border-slate-700 rounded-full"></div>
                        <div class="w-16 h-16 border-4 border-primary-500 border-t-transparent rounded-full animate-spin absolute top-0 left-0"></div>
                    </div>
                    <p class="mt-4 text-slate-600 dark:text-slate-400 font-medium">Loading accounts...</p>
                </div>
            </div>
        }
        else
        {
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-gradient-to-br from-primary-500 to-primary-700 dark:from-primary-600 dark:to-primary-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white">
                    <div class="flex items-start justify-between mb-4">
                        <div class="p-3 bg-white/20 rounded-lg backdrop-blur-sm">
                            <span class="oi oi-people text-2xl" aria-hidden="true"></span>
                        </div>
                        <span class="px-3 py-1 bg-white/20 rounded-full text-xs font-semibold backdrop-blur-sm">TOTAL</span>
                    </div>
                    <h3 class="text-4xl font-bold mb-1">@_totalAccounts</h3>
                    <p class="text-primary-100 font-medium mb-2">Total Accounts</p>
                    <div class="flex items-center gap-2 text-sm text-primary-100">
                        <span class="oi oi-info" aria-hidden="true"></span>
                        <span>All registered users</span>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-accent-500 to-accent-700 dark:from-accent-600 dark:to-accent-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white">
                    <div class="flex items-start justify-between mb-4">
                        <div class="p-3 bg-white/20 rounded-lg backdrop-blur-sm">
                            <span class="oi oi-circle-check text-2xl" aria-hidden="true"></span>
                        </div>
                        <span class="px-3 py-1 bg-white/20 rounded-full text-xs font-semibold backdrop-blur-sm">ACTIVE</span>
                    </div>
                    <h3 class="text-4xl font-bold mb-1">@_activeAccounts</h3>
                    <p class="text-accent-100 font-medium mb-2">Active Accounts</p>
                    <div class="flex items-center gap-2 text-sm text-accent-100">
                        <span class="oi oi-check" aria-hidden="true"></span>
                        <span>Currently active</span>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-danger-500 to-danger-700 dark:from-danger-600 dark:to-danger-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white">
                    <div class="flex items-start justify-between mb-4">
                        <div class="p-3 bg-white/20 rounded-lg backdrop-blur-sm">
                            <span class="oi oi-ban text-2xl" aria-hidden="true"></span>
                        </div>
                        <span class="px-3 py-1 bg-white/20 rounded-full text-xs font-semibold backdrop-blur-sm">BANNED</span>
                    </div>
                    <h3 class="text-4xl font-bold mb-1">@_bannedAccounts</h3>
                    <p class="text-danger-100 font-medium mb-2">Banned Accounts</p>
                    <div class="flex items-center gap-2 text-sm text-danger-100">
                        <span class="oi oi-x" aria-hidden="true"></span>
                        <span>Permanently banned</span>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-accent-500 to-accent-700 dark:from-accent-600 dark:to-accent-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white">
                    <div class="flex items-start justify-between mb-4">
                        <div class="p-3 bg-white/20 rounded-lg backdrop-blur-sm">
                            <span class="oi oi-clock text-2xl" aria-hidden="true"></span>
                        </div>
                        <span class="px-3 py-1 bg-white/20 rounded-full text-xs font-semibold backdrop-blur-sm">TEMP</span>
                    </div>
                    <h3 class="text-4xl font-bold mb-1">@_tempBannedAccounts</h3>
                    <p class="text-accent-100 font-medium mb-2">Temp Banned</p>
                    <div class="flex items-center gap-2 text-sm text-accent-100">
                        <span class="oi oi-timer" aria-hidden="true"></span>
                        <span>Temporary suspension</span>
                    </div>
                </div>
            </div>

            <!-- Search and Filter Bar -->
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg border border-slate-200 dark:border-slate-700 p-6 mb-6">
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="flex-1">
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-slate-400 text-xl">🔍</span>
                            <input type="text" 
                                   placeholder="Search by login name or email..." 
                                   @bind="_searchTerm" 
                                   @bind:event="oninput"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all" />
                        </div>
                    </div>
                    <select @bind="_filterState" 
                            class="px-6 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all">
                        <option value="">All Status</option>
                        <option value="Normal">Active</option>
                        <option value="Banned">Banned</option>
                        <option value="TemporarilyBanned">Temp Banned</option>
                    </select>
                </div>
                @if (!string.IsNullOrEmpty(_searchTerm) || !string.IsNullOrEmpty(_filterState))
                {
                    <div class="mt-4 flex items-center gap-3">
                        <span class="text-slate-600 dark:text-slate-400 text-sm">Showing @_filteredAccounts.Count() of @_totalAccounts accounts</span>
                        <button @onclick="ClearFilters" class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">Clear filters</button>
                    </div>
                }
            </div>

            <!-- Accounts Table Card -->
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl border border-slate-200 dark:border-slate-700 overflow-hidden">
                <div class="bg-gradient-to-r from-slate-800 to-slate-700 dark:from-slate-700 dark:to-slate-600 p-6">
                    <div class="flex items-center justify-between">
                        <h2 class="text-2xl font-bold text-white flex items-center gap-2">
                            <span>📋</span> Accounts List
                        </h2>
                        <span class="bg-white/20 px-4 py-2 rounded-lg text-white font-semibold backdrop-blur-sm">
                            @_filteredAccounts.Count() accounts
                        </span>
                    </div>
                </div>
                
                @if (_filteredAccounts.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-slate-100 dark:bg-slate-700/50 border-b-2 border-slate-300 dark:border-slate-600">
                                <tr>
                                    <th class="px-6 py-4 text-left">
                                        <div class="flex items-center gap-2 text-sm font-bold text-slate-700 dark:text-slate-200 uppercase tracking-wider">
                                            <span>👤</span>
                                            <span>Login Name</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left">
                                        <div class="flex items-center gap-2 text-sm font-bold text-slate-700 dark:text-slate-200 uppercase tracking-wider">
                                            <span>🔒</span>
                                            <span>Status</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left">
                                        <div class="flex items-center gap-2 text-sm font-bold text-slate-700 dark:text-slate-200 uppercase tracking-wider">
                                            <span>📧</span>
                                            <span>Email</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left">
                                        <div class="flex items-center gap-2 text-sm font-bold text-slate-700 dark:text-slate-200 uppercase tracking-wider">
                                            <span>🎮</span>
                                            <span>Characters</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end gap-2 text-sm font-bold text-slate-700 dark:text-slate-200 uppercase tracking-wider">
                                            <span>⚙️</span>
                                            <span>Actions</span>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                                @foreach (var item in _filteredAccounts)
                                {
                                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg">
                                                    @item.LoginName.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <p class="text-slate-900 dark:text-white font-semibold">@item.LoginName</p>
                                                    <p class="text-slate-500 dark:text-slate-400 text-sm">ID: @item.GetId()</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            @{
                                                var (badgeColor, icon) = GetAccountStateBadgeStyle(item.State);
                                            }
                                            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-bold @badgeColor">
                                                <span>@icon</span>
                                                @GetAccountStateText(item.State)
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="text-slate-700 dark:text-slate-300">
                                                @(string.IsNullOrEmpty(item.EMail) ? "—" : item.EMail)
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-2">
                                                <span class="bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 px-3 py-1 rounded-full text-sm font-semibold">
                                                    @item.Characters.Count
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <NavLink href="@($"edit-account/{item.GetId()}/{typeof(Account).FullName}/{item.GetId()}")" 
                                                     class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-primary-500 to-primary-700 hover:from-primary-600 hover:to-primary-800 text-white rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all transform hover:scale-105">
                                                <span>✏️</span> Edit Account
                                            </NavLink>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-16 text-center">
                        <div class="text-6xl mb-4">🔍</div>
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">No Accounts Found</h3>
                        <p class="text-slate-600 dark:text-slate-400 mb-6">
                            @if (!string.IsNullOrEmpty(_searchTerm) || !string.IsNullOrEmpty(_filterState))
                            {
                                <span>No accounts match your search criteria.</span>
                            }
                            else
                            {
                                <span>Get started by creating your first account.</span>
                            }
                        </p>
                        @if (string.IsNullOrEmpty(_searchTerm) && string.IsNullOrEmpty(_filterState))
                        {
                            <button type="button" 
                                    @onclick="@this._accountService.CreateNewInModalDialogAsync"
                                    class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white rounded-xl font-bold shadow-lg hover:shadow-xl transition-all inline-flex items-center gap-2">
                                <span class="text-xl">✨</span> Create First Account
                            </button>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private bool _isLoading = true;
    private string _searchTerm = string.Empty;
    private string _filterState = string.Empty;
    private int _totalAccounts;
    private int _activeAccounts;
    private int _bannedAccounts;
    private int _tempBannedAccounts;
    private IEnumerable<Account> _allAccounts = Enumerable.Empty<Account>();

    private IEnumerable<Account> _filteredAccounts
    {
        get
        {
            var filtered = _allAccounts;

            if (!string.IsNullOrEmpty(_searchTerm))
            {
                filtered = filtered.Where(a => 
                    a.LoginName.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (a.EMail?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false));
            }

            if (!string.IsNullOrEmpty(_filterState) && Enum.TryParse<AccountState>(_filterState, out var state))
            {
                filtered = filtered.Where(a => a.State == state);
            }

            return filtered;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadAccountsAsync();
    }

    private async Task LoadAccountsAsync()
    {
        _isLoading = true;
        StateHasChanged();

        await Task.Delay(100); // Brief delay for smooth loading animation

        // Load all accounts (using large count to get all)
        _allAccounts = (await _accountService.GetAsync(0, 10000)).OrderBy(a => a.LoginName).ToList();
        _totalAccounts = _allAccounts.Count();
        _activeAccounts = _allAccounts.Count(a => a.State == AccountState.Normal);
        _bannedAccounts = _allAccounts.Count(a => a.State == AccountState.Banned);
        _tempBannedAccounts = _allAccounts.Count(a => a.State == AccountState.TemporarilyBanned);

        _isLoading = false;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        _filterState = string.Empty;
    }

    private (string cssClass, string icon) GetAccountStateBadgeStyle(AccountState state)
    {
        return state switch
        {
            AccountState.Normal => ("bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300", "✅"),
            AccountState.Banned => ("bg-danger-100 dark:bg-danger-900/30 text-danger-700 dark:text-danger-300", "🚫"),
            AccountState.TemporarilyBanned => ("bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300", "⏱️"),
            _ => ("bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300", "❓")
        };
    }

    private string GetAccountStateText(AccountState state)
    {
        return state switch
        {
            AccountState.Normal => "Active",
            AccountState.Banned => "Banned",
            AccountState.TemporarilyBanned => "Temp Banned",
            _ => state.ToString()
        };
    }

    public void Dispose()
    {
        // Clean up if needed
    }
}
