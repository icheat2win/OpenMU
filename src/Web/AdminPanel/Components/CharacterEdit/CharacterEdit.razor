@using System.ComponentModel.DataAnnotations
@using MUnique.OpenMU.DataModel.Entities
@using MUnique.OpenMU.DataModel.Configuration
@using MUnique.OpenMU.Web.AdminPanel.Components.Form
@using MUnique.OpenMU.Persistence
@using System.Data

<PageTitle>Edit Character: @Character.Name</PageTitle>

<style>
    /* Ensure all form inputs have dark text on light backgrounds */
    input, select, textarea, .form-control {
        color: #0f172a !important;
    }
    
    /* Style helper text */
    small {
        color: #64748b !important;
        font-size: 0.75rem !important;
        display: block !important;
        margin-top: 0.25rem !important;
    }
</style>

<div class="min-h-screen bg-slate-50 py-6 px-4">
    <div class="max-w-7xl mx-auto">
        <!-- Character Header -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl shadow-lg p-8 mb-6 text-white">
            <h1 class="text-3xl font-bold mb-2">‚úèÔ∏è Edit Character</h1>
            <p class="text-blue-100">@Character.Name ‚Ä¢ Level @CurrentLevel</p>
        </div>

        @if (IsCharacterOnline)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-6 mb-6 rounded-lg shadow-lg">
                <div class="flex items-center gap-3">
                    <span class="text-3xl">‚ö†Ô∏è</span>
                    <div>
                        <p class="font-bold text-lg">Character is currently ONLINE</p>
                        <p class="text-sm">Editing while online may cause issues. Please log out the character first, then refresh this page.</p>
                    </div>
                </div>
            </div>
        }

        <EditForm Model="Character" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <fieldset disabled="@IsCharacterOnline">
            
            <!-- Basic Information -->
            <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
                <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                    <span>üìã</span>
                    <span>Basic Information</span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Character Name</label>
                        <InputText @bind-Value="@Character.Name" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                        <ValidationMessage For="@(() => Character.Name)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Character Class</label>
                        <LookupField @bind-Value="@Character.CharacterClass" />
                        <ValidationMessage For="@(() => Character.CharacterClass)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Character Slot</label>
                        <InputByte @bind-Value="@Character.CharacterSlot" Min="0" Max="4" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                        <ValidationMessage For="@(() => Character.CharacterSlot)" />
                    </div>
                </div>
            </div>
        
        <!-- Location & Position -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üó∫Ô∏è</span>
                <span>Location & Position</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Current Map</label>
                    <LookupField @bind-Value="@Character.CurrentMap" />
                    <ValidationMessage For="@(() => Character.CurrentMap)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Position X</label>
                    <InputByte @bind-Value="@Character.PositionX" Min="0" Max="255" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.PositionX)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Position Y</label>
                    <InputByte @bind-Value="@Character.PositionY" Min="0" Max="255" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.PositionY)" />
                </div>
            </div>
        </div>

        <!-- Experience & Level -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">‚ö°</span>
                <span>Experience & Level</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Level</label>
                    <InputNumber @bind-Value="@CurrentLevel" min="1" max="400" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Character level (1-400)</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Experience</label>
                    <InputNumber @bind-Value="@Character.Experience" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.Experience)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Level Up Points</label>
                    <InputNumber @bind-Value="@Character.LevelUpPoints" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.LevelUpPoints)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Master Level</label>
                    <InputNumber @bind-Value="@CurrentMasterLevel" min="0" max="400" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Master level (0-400)</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Master Experience</label>
                    <InputNumber @bind-Value="@Character.MasterExperience" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.MasterExperience)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Master Level Up Points</label>
                    <InputNumber @bind-Value="@Character.MasterLevelUpPoints" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.MasterLevelUpPoints)" />
                </div>
            </div>
        </div>

        <!-- Character Stats -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üí™</span>
                <span>Character Stats</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Strength</label>
                    <InputNumber @bind-Value="@Strength" min="0" max="65000" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Base strength attribute</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Agility</label>
                    <InputNumber @bind-Value="@Agility" min="0" max="65000" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Base agility attribute</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Vitality</label>
                    <InputNumber @bind-Value="@Vitality" min="0" max="65000" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Base vitality attribute</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Energy</label>
                    <InputNumber @bind-Value="@Energy" min="0" max="65000" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Base energy attribute</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Command</label>
                    <InputNumber @bind-Value="@Command" min="0" max="65000" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Command points for summoner</small>
                </div>
            </div>
        </div>

        <!-- Money & Currency -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üí∞</span>
                <span>Money & Currency</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Inventory Zen (Money)</label>
                    <InputNumber @bind-Value="@InventoryMoney" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Current zen in character inventory</small>
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Vault Zen (Bank)</label>
                    <InputNumber @bind-Value="@VaultMoney" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Zen stored in account vault</small>
                </div>
            </div>
        </div>

        <!-- Character State -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üí´</span>
                <span>Character State</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Hero State</label>
                    <InputSelect @bind-Value="@Character.State" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors">
                        @foreach (var state in Enum.GetValues<HeroState>())
                        {
                            <option value="@state">@state</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Character.State)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">State Remaining Seconds</label>
                    <InputNumber @bind-Value="@Character.StateRemainingSeconds" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.StateRemainingSeconds)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Character Status</label>
                    <InputSelect @bind-Value="@Character.CharacterStatus" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors">
                        @foreach (var status in Enum.GetValues<CharacterStatus>())
                        {
                            <option value="@status">@status</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Character.CharacterStatus)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Pose</label>
                    <InputSelect @bind-Value="@Character.Pose" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors">
                        @foreach (var pose in Enum.GetValues<CharacterPose>())
                        {
                            <option value="@pose">@pose</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Character.Pose)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Create Date</label>
                    <InputDate @bind-Value="@Character.CreateDate" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Character creation timestamp</small>
                    <ValidationMessage For="@(() => Character.CreateDate)" />
                </div>
            </div>
        </div>

        <!-- PK (Player Kill) System -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span>‚öîÔ∏è</span>
                <span>PK (Player Kill) System</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Player Kill Count</label>
                    <InputNumber @bind-Value="@Character.PlayerKillCount" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Total number of player kills</small>
                    <ValidationMessage For="@(() => Character.PlayerKillCount)" />
                </div>
            </div>
        </div>

        <!-- Fruit Points & Inventory -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üéí</span>
                <span>Fruit Points & Inventory</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Used Fruit Points</label>
                    <InputNumber @bind-Value="@Character.UsedFruitPoints" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.UsedFruitPoints)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Used Negative Fruit Points</label>
                    <InputNumber @bind-Value="@Character.UsedNegFruitPoints" min="0" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.UsedNegFruitPoints)" />
                </div>

                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Inventory Extensions</label>
                    <InputNumber @bind-Value="@Character.InventoryExtensions" min="0" max="4" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <small>Season 6+ feature (0-4 extensions)</small>
                    <ValidationMessage For="@(() => Character.InventoryExtensions)" />
                </div>
            </div>
        </div>

        <!-- Personal Store -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üè™</span>
                <span>Personal Store</span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="">
                    <label class="block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wide">Store Name</label>
                    <InputText @bind-Value="@Character.StoreName" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                    <ValidationMessage For="@(() => Character.StoreName)" />
                </div>

                <div class="flex items-center gap-3 p-4 bg-slate-50 rounded-lg border border-slate-200 hover:border-blue-300 transition-colors cursor-pointer">
                    <InputCheckbox @bind-Value="@Character.IsStoreOpened" class="w-5 h-5" />
                    <label class="text-sm font-medium text-slate-900 cursor-pointer">Store is Open</label>
                </div>
            </div>
        </div>

        <!-- Inventory Management -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span class="">üéí</span>
                <span>Inventory & Equipment</span>
            </div>
            
            <div class="grid grid-cols-3 gap-4 p-4 bg-slate-50 rounded-lg mb-6">
                <div class="flex flex-col gap-1">
                    <span class="text-xs text-slate-600 uppercase tracking-wide font-semibold">Total Items:</span>
                    <span class="text-2xl font-bold text-cyan-500">@(Character.Inventory?.Items?.Count ?? 0)</span>
                </div>
                <div class="flex flex-col gap-1">
                    <span class="text-xs text-slate-600 uppercase tracking-wide font-semibold">Current Zen:</span>
                    <span class="text-2xl font-bold text-cyan-500">@(Character.Inventory?.Money ?? 0)</span>
                </div>
                <div class="flex flex-col gap-1">
                    <span class="text-xs text-slate-600 uppercase tracking-wide font-semibold">Extensions:</span>
                    <span class="text-2xl font-bold text-cyan-500">@Character.InventoryExtensions / 4</span>
                </div>
            </div>

            @if (Character.Inventory != null)
            {
                <ItemStorageField @bind-Value="@Character.Inventory" Label="Character Inventory" />
            }
            else
            {
                <div class="text-center py-12">
                    <span class="text-6xl block mb-4 opacity-50">üì≠</span>
                    <p class="text-lg text-slate-600 mb-6">No inventory storage available</p>
                    <button type="button" class="px-6 py-3 bg-gradient-to-r from-emerald-500 to-green-500 text-white rounded-lg font-semibold hover:shadow-lg transition-all" @onclick="CreateInventory">
                        Create Inventory
                    </button>
                </div>
            }
        </div>

        <!-- Vault Storage -->
        @if (Account?.Vault != null)
        {
            <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
                <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                    <span class="">üè¶</span>
                    <span>Vault Storage</span>
                </div>
                
                <div class="grid grid-cols-2 gap-4 p-4 bg-slate-50 rounded-lg mb-6">
                    <div class="flex flex-col gap-1">
                        <span class="text-xs text-slate-600 uppercase tracking-wide font-semibold">Vault Items:</span>
                        <span class="text-2xl font-bold text-cyan-500">@(Account.Vault.Items?.Count ?? 0)</span>
                    </div>
                    <div class="flex flex-col gap-1">
                        <span class="text-xs text-slate-600 uppercase tracking-wide font-semibold">Vault Zen:</span>
                        <span class="text-2xl font-bold text-cyan-500">@Account.Vault.Money</span>
                    </div>
                </div>

                <ItemStorageField @bind-Value="@Account.Vault" Label="Account Vault" />
            </div>
        }

        <!-- Learned Skills -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span>üìú</span>
                <span>Learned Skills</span>
            </div>
            
            <div class="p-4 bg-slate-50 rounded-lg mb-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm font-semibold text-slate-700">Total Skills: <span class="text-cyan-500">@(Character.LearnedSkills?.Count ?? 0)</span></span>
                </div>
            </div>

            @if (Character.LearnedSkills != null && Character.LearnedSkills.Any())
            {
                <ItemTable Value="@Character.LearnedSkills" Label="Skills" />
            }
            else
            {
                <div class="text-center py-8">
                    <p class="text-slate-500">No skills learned yet</p>
                </div>
            }
        </div>

        <!-- Quest States -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span>üó∫Ô∏è</span>
                <span>Quest Progress</span>
            </div>
            
            <div class="p-4 bg-slate-50 rounded-lg mb-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm font-semibold text-slate-700">Active Quests: <span class="text-cyan-500">@(Character.QuestStates?.Count ?? 0)</span></span>
                </div>
            </div>

            @if (Character.QuestStates != null && Character.QuestStates.Any())
            {
                <ItemTable Value="@Character.QuestStates" Label="Quests" />
            }
            else
            {
                <div class="text-center py-8">
                    <p class="text-slate-500">No active quests</p>
                </div>
            }
        </div>

        <!-- Drop Item Groups -->
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                <span>üéÅ</span>
                <span>Drop Item Groups</span>
            </div>
            
            <div class="p-4 bg-slate-50 rounded-lg mb-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm font-semibold text-slate-700">Total Groups: <span class="text-cyan-500">@(Character.DropItemGroups?.Count ?? 0)</span></span>
                </div>
            </div>

