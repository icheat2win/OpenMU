@using System.ComponentModel.DataAnnotations
@using MUnique.OpenMU.DataModel.Entities
@using MUnique.OpenMU.DataModel.Configuration
@using MUnique.OpenMU.Web.AdminPanel.Components.Form

<PageTitle>Edit Character: @Character.Name</PageTitle>

<style>
    /* Force dark theme for entire page */
    body {
        background-color: #0f172a !important;
        color: #f1f5f9 !important;
    }
    
    .character-edit-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #0f172a;
        min-height: 100vh;
    }
    
    .character-header {
        background: linear-gradient(135deg, #1e3a8a 0%, #7c3aed 100%);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    
    .character-header h1 {
        font-size: 2rem;
        font-weight: 600;
        color: #f1f5f9;
        margin: 0 0 8px 0;
    }
    
    .character-header p {
        color: #94a3b8;
        margin: 0;
        font-size: 0.875rem;
    }
    
    .section-card {
        background: #1e293b;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
    }
    
    .section-header {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 1.125rem;
        font-weight: 600;
        color: #f1f5f9;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .section-icon {
        color: #06b6d4;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }
    
    .form-field {
        margin-bottom: 0;
    }
    
    .form-field label {
        display: block;
        font-size: 0.75rem;
        font-weight: 500;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 8px;
    }
    
    .form-field input,
    .form-field select,
    .form-field .form-control {
        width: 100% !important;
        padding: 12px 16px !important;
        background: rgba(0, 0, 0, 0.3) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 12px !important;
        color: #f1f5f9 !important;
        font-size: 0.875rem !important;
        transition: all 0.2s !important;
        height: auto !important;
    }
    
    .form-field input:focus,
    .form-field select:focus,
    .form-field .form-control:focus {
        outline: none !important;
        border-color: rgba(6, 182, 212, 0.6) !important;
        box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1) !important;
        background: rgba(0, 0, 0, 0.4) !important;
    }
    
    /* Override Bootstrap placeholder color */
    .form-field input::placeholder,
    .form-field .form-control::placeholder {
        color: #64748b !important;
        opacity: 1 !important;
    }
    
    /* Style BlazoredTypeahead dropdowns */
    .form-field .blazored-typeahead__input {
        width: 100% !important;
        padding: 12px 16px !important;
        background: rgba(0, 0, 0, 0.3) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 12px !important;
        color: #f1f5f9 !important;
        font-size: 0.875rem !important;
    }
    
    .form-field .blazored-typeahead__input:focus {
        outline: none !important;
        border-color: rgba(6, 182, 212, 0.6) !important;
        box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1) !important;
        background: rgba(0, 0, 0, 0.4) !important;
    }
    
    .form-field small {
        display: block;
        margin-top: 6px;
        font-size: 0.75rem;
        color: #64748b;
    }
    
    .checkbox-field {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
    }
    
    .checkbox-field input[type="checkbox"] {
        width: auto;
        margin: 0;
    }
    
    .checkbox-field label {
        margin: 0;
        font-size: 0.875rem;
        color: #e2e8f0;
        text-transform: none;
        letter-spacing: normal;
    }
    
    .action-buttons {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 24px;
    }
    
    .btn-save {
        background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
        border: none;
        color: white;
        padding: 12px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 12px rgba(6, 182, 212, 0.25);
    }
    
    .btn-save:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 16px rgba(6, 182, 212, 0.35);
        filter: brightness(1.1);
    }
    
    .btn-cancel {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #cbd5e1;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: #64748b;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 16px;
    }
</style>

<div class="character-edit-container">
    <div class="character-header">
        <h1>‚úèÔ∏è Edit Character</h1>
        <p>@Character.Name ‚Ä¢ Level @(Character.Attributes?.FirstOrDefault(a => a.Definition?.Designation == "Level")?.Value ?? 0)</p>
    </div>

    <EditForm Model="Character" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        
        <!-- Basic Information -->
        <div class="section-card">
            <div class="section-header">
                <span class="section-icon">üìã</span>
                <span>Basic Information</span>
            </div>
            
            <div class="form-grid">
                <div class="form-field">
                    <label>Character Name</label>
                    <InputText @bind-Value="@Character.Name" />
                    <ValidationMessage For="@(() => Character.Name)" />
                </div>

                <div class="form-field">
                    <label>Character Class</label>
                    <LookupField @bind-Value="@Character.CharacterClass" />
                    <ValidationMessage For="@(() => Character.CharacterClass)" />
                </div>

                <div class="form-field">
                    <label>Character Slot</label>
                    <InputByte @bind-Value="@Character.CharacterSlot" Min="0" Max="4" />
                    <ValidationMessage For="@(() => Character.CharacterSlot)" />
                </div>
            </div>
        </div>
        
        <!-- Location & Position -->
        <div class="section-card">
            <div class="section-header">
                <span class="section-icon">üó∫Ô∏è</span>
                <span>Location & Position</span>
            </div>
            
            <div class="form-grid">
                <div class="form-field">
                    <label>Current Map</label>
                    <LookupField @bind-Value="@Character.CurrentMap" />
                    <ValidationMessage For="@(() => Character.CurrentMap)" />
                </div>

                <div class="form-field">
                    <label>Position X</label>
                    <InputByte @bind-Value="@Character.PositionX" Min="0" Max="255" />
                    <ValidationMessage For="@(() => Character.PositionX)" />
                </div>

                <div class="form-field">
                    <label>Position Y</label>
                    <InputByte @bind-Value="@Character.PositionY" Min="0" Max="255" />
                    <ValidationMessage For="@(() => Character.PositionY)" />
                </div>
            </div>
        </div>

        <!-- Experience & Level -->
        <div class="section-card">
            <div class="section-header">
                <span class="section-icon">‚ö°</span>
                <span>Experience & Level</span>
            </div>
            
            <div class="form-grid">
                <div class="form-field">
                    <label>Level</label>
                    <InputNumber @bind-Value="@CurrentLevel" min="1" max="400" />
                    <small>Character level (1-400)</small>
                </div>

                <div class="form-field">
                    <label>Experience</label>
                    <InputNumber @bind-Value="@Character.Experience" min="0" />
                    <ValidationMessage For="@(() => Character.Experience)" />
                </div>

                <div class="form-field">
                    <label>Level Up Points</label>
                    <InputNumber @bind-Value="@Character.LevelUpPoints" min="0" />
                    <ValidationMessage For="@(() => Character.LevelUpPoints)" />
                </div>

                <div class="form-field">
                    <label>Master Level</label>
                    <InputNumber @bind-Value="@CurrentMasterLevel" min="0" max="400" />
                    <small>Master level (0-400)</small>
                </div>

                <div class="form-field">
                    <label>Master Experience</label>
                    <InputNumber @bind-Value="@Character.MasterExperience" min="0" />
                    <ValidationMessage For="@(() => Character.MasterExperience)" />
                </div>

                <div class="form-field">
                    <label>Master Level Up Points</label>
                    <InputNumber @bind-Value="@Character.MasterLevelUpPoints" min="0" />
                    <ValidationMessage For="@(() => Character.MasterLevelUpPoints)" />
                </div>
            </div>
        </div>

        <!-- Character State -->
        <div class="section-card">
            <div class="section-header">
                <span class="section-icon">üí´</span>
                <span>Character State</span>
            </div>
            
            <div class="form-grid">
                <div class="form-field">
                    <label>Hero State</label>
                    <InputSelect @bind-Value="@Character.State">
                        @foreach (var state in Enum.GetValues<HeroState>())
                        {
                            <option value="@state">@state</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Character.State)" />
                </div>

                <div class="form-field">
                    <label>State Remaining Seconds</label>
                    <InputNumber @bind-Value="@Character.StateRemainingSeconds" min="0" />
                    <ValidationMessage For="@(() => Character.StateRemainingSeconds)" />
                </div>

                <div class="form-field">
                    <label>Character Status</label>
                    <InputSelect @bind-Value="@Character.CharacterStatus">
                        @foreach (var status in Enum.GetValues<CharacterStatus>())
                        {
                            <option value="@status">@status</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Character.CharacterStatus)" />
                </div>

                <div class="form-field">
                    <label>Pose</label>
                    <InputSelect @bind-Value="@Character.Pose">
                        @foreach (var pose in Enum.GetValues<CharacterPose>())
                        {
                            <option value="@pose">@pose</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Character.Pose)" />
                </div>

                <div class="form-field">
                    <label>Player Kill Count</label>
                    <InputNumber @bind-Value="@Character.PlayerKillCount" min="0" />
                    <ValidationMessage For="@(() => Character.PlayerKillCount)" />
                </div>
            </div>
        </div>

        <!-- Fruit Points & Inventory -->
        <div class="section-card">
            <div class="section-header">
                <span class="section-icon">üéí</span>
                <span>Fruit Points & Inventory</span>
            </div>
            
            <div class="form-grid">
                <div class="form-field">
                    <label>Used Fruit Points</label>
                    <InputNumber @bind-Value="@Character.UsedFruitPoints" min="0" />
                    <ValidationMessage For="@(() => Character.UsedFruitPoints)" />
                </div>

                <div class="form-field">
                    <label>Used Negative Fruit Points</label>
                    <InputNumber @bind-Value="@Character.UsedNegFruitPoints" min="0" />
                    <ValidationMessage For="@(() => Character.UsedNegFruitPoints)" />
                </div>

                <div class="form-field">
                    <label>Inventory Extensions</label>
                    <InputNumber @bind-Value="@Character.InventoryExtensions" min="0" max="4" />
                    <small>Season 6+ feature (0-4 extensions)</small>
                    <ValidationMessage For="@(() => Character.InventoryExtensions)" />
                </div>
            </div>
        </div>

        <!-- Personal Store -->
        <div class="section-card">
            <div class="section-header">
                <span class="section-icon">üè™</span>
                <span>Personal Store</span>
            </div>
            
            <div class="form-grid">
                <div class="form-field">
                    <label>Store Name</label>
                    <InputText @bind-Value="@Character.StoreName" />
                    <ValidationMessage For="@(() => Character.StoreName)" />
                </div>

                <div class="checkbox-field">
                    <InputCheckbox @bind-Value="@Character.IsStoreOpened" />
                    <label>Store is Open</label>
                </div>
            </div>
        </div>

        <!-- Other -->
        <div class="section-card">
            <div class="form-field">
                <label>Create Date</label>
                <InputDate @bind-Value="@Character.CreateDate" />
                <ValidationMessage For="@(() => Character.CreateDate)" />
            </div>
        </div>

        <ValidationSummary />
        
        <div class="action-buttons">
            @if (OnCancel.HasDelegate)
            {
                <button type="button" class="btn-cancel" @onclick="OnCancel">Cancel</button>
            }
            <button type="submit" class="btn-save">üíæ Save Changes</button>
        </div>
    </EditForm>
</div>

@code {
    /// <summary>
    /// Gets or sets the character being edited.
    /// </summary>
    [Parameter]
    [Required]
    public Character Character { get; set; } = null!;

    /// <summary>
    /// Gets or sets the <see cref="EditForm.OnValidSubmit"/> event callback.
    /// </summary>
    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

    /// <summary>
    /// Gets or sets the task which should be executed when the cancel button gets clicked.
    /// </summary>
    [Parameter]
    public EventCallback OnCancel { get; set; }

    /// <summary>
    /// Gets or sets the current character level.
    /// This property reads from and writes to the Character.Attributes collection.
    /// </summary>
    private int CurrentLevel
    {
        get
        {
            if (Character?.Attributes == null)
                return 1;
            
            var levelAttr = Character.Attributes.FirstOrDefault(a => a.Definition?.Designation == "Level");
            return levelAttr != null ? (int)levelAttr.Value : 1;
        }
        set
        {
            if (Character?.Attributes == null)
                return;
            
            var levelAttr = Character.Attributes.FirstOrDefault(a => a.Definition?.Designation == "Level");
            if (levelAttr != null)
            {
                levelAttr.Value = Math.Clamp(value, 1, 400);
            }
        }
    }

    /// <summary>
    /// Gets or sets the current character master level.
    /// This property reads from and writes to the Character.Attributes collection.
    /// </summary>
    private int CurrentMasterLevel
    {
        get
        {
            if (Character?.Attributes == null)
                return 0;
            
            var masterLevelAttr = Character.Attributes.FirstOrDefault(a => a.Definition?.Designation == "Master Level");
            return masterLevelAttr != null ? (int)masterLevelAttr.Value : 0;
        }
        set
        {
            if (Character?.Attributes == null)
                return;
            
            var masterLevelAttr = Character.Attributes.FirstOrDefault(a => a.Definition?.Designation == "Master Level");
            if (masterLevelAttr != null)
            {
                masterLevelAttr.Value = Math.Clamp(value, 0, 400);
            }
        }
    }
}
