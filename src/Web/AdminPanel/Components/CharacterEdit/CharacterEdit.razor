    /// <summary>
    /// Handles form submission by first checking if character is online.
    /// If online, prevents save and shows warning.
    /// <summary>
    /// Reloads character data directly from the database, bypassing Entity Framework caching.
    /// This ensures we always have fresh data, especially after in-game resets.
    /// Also checks if the character is currently online in any game server.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("=== OnInitializedAsync START ===");
        Logger.LogInformation("Character is null: {IsNull}", Character == null);
        Logger.LogInformation("PersistenceContext is null: {IsNull}", PersistenceContext == null);
        
        if (Character != null)
        {
            Logger.LogInformation("Character Name: {CharacterName}, ID: {CharacterId}", Character.Name, Character.GetId());
        }
        
        await base.OnInitializedAsync();
        Logger.LogInformation("About to call ReloadCharacterFromDatabaseAsync");
        await ReloadCharacterFromDatabaseAsync();
        Logger.LogInformation("=== OnInitializedAsync END ===");
    }

    /// <summary>
    /// Called after the component has finished rendering.
    /// We check online status here to ensure it happens after the page loads.
    /// </summary>
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        
        if (firstRender)
        {
            await CheckIfCharacterIsOnlineAsync();
            StateHasChanged(); // Force re-render to show online status
        }
    }

    /// <summary>
    /// Checks if the character is currently online by querying the /api/status endpoint.
    /// This is the only reliable way to check since the database State field 
    /// is only updated when the character logs out.
    /// Uses the same API endpoint as the Reset/PK Clear buttons.
    /// </summary>
    private async Task CheckIfCharacterIsOnlineAsync()
    {
        _isCheckingOnlineStatus = true;
        _isCharacterOnline = false;

        if (Character == null || string.IsNullOrEmpty(Character.Name))
        {
            Logger.LogWarning("Character is null or has no name, cannot check online status");
            _isCheckingOnlineStatus = false;
            return;
        }

        try
        {
            Logger.LogInformation("Checking online status for character: {CharacterName}", Character.Name);
            var response = await HttpClient.GetStringAsync("/api/status");
            Logger.LogInformation("API Response: {Response}", response);
            
            // Parse JSON directly: {"state":"Online","players":1,"playersList":["Agge"]}
            using var doc = JsonDocument.Parse(response);
            if (doc.RootElement.TryGetProperty("playersList", out var playersListElement))
            {
                var playersList = playersListElement.EnumerateArray()
                    .Select(p => p.GetString())
                    .Where(p => !string.IsNullOrEmpty(p))
                    .ToList();
                
                Logger.LogInformation("Players online: {PlayersList}", string.Join(", ", playersList));
                _isCharacterOnline = playersList.Contains(Character.Name, StringComparer.OrdinalIgnoreCase);
                Logger.LogInformation("Is '{CharacterName}' online? {IsOnline}", Character.Name, _isCharacterOnline);
            }
            else
            {
                Logger.LogWarning("No 'playersList' property found in API response");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking online status for character: {CharacterName}", Character?.Name ?? "Unknown");
            // If we can't check, assume offline to allow editing
            _isCharacterOnline = false;
        }
        finally
        {
            _isCheckingOnlineStatus = false;
        }
    }

    /// <summary>
    /// Reloads critical character fields directly from database to bypass EF caching.
    /// </summary>
    private async Task ReloadCharacterFromDatabaseAsync()
    {
        if (Character == null || PersistenceContext == null)
        {
            Logger.LogWarning("ReloadCharacterFromDatabaseAsync: Character or PersistenceContext is null");
            return;
        }

        Logger.LogInformation("=== START RELOAD CHARACTER FROM DATABASE ===");
        Logger.LogInformation("Character: {CharacterName} (ID: {CharacterId})", Character.Name, Character.GetId());

        try
        {
            // Get the underlying DbContext from the persistence context using reflection
            var contextType = PersistenceContext.GetType();
            var contextProperty = contextType.GetProperty("Context", System.Reflection.BindingFlags.Instance | System.Reflection.BindingFlags.NonPublic | System.Reflection.BindingFlags.Public);
            if (contextProperty?.GetValue(PersistenceContext) is not object dbContextObj)
            {
                Logger.LogError("Failed to get DbContext from PersistenceContext - Property: {PropertyFound}", contextProperty != null ? "Found" : "NotFound");
                Logger.LogError("PersistenceContext type: {Type}", contextType.FullName);
                return;
            }

            Logger.LogInformation("Successfully got DbContext: {DbContextType}", dbContextObj.GetType().Name);

            // Query database directly for fresh data using reflection
            var dbContextType = dbContextObj.GetType();
            var databaseProperty = dbContextType.GetProperty("Database");
            if (databaseProperty?.GetValue(dbContextObj) is not object databaseObj)
            {
                Logger.LogError("Failed to get Database from DbContext");
                return;
            }

            Logger.LogInformation("Successfully got Database object");

            // Get DbConnection - need to use extension method from EF Core
            // DatabaseFacade.GetDbConnection() is an extension method, so we need to use the static method directly
            var relationalExtensionsType = Type.GetType("Microsoft.EntityFrameworkCore.RelationalDatabaseFacadeExtensions, Microsoft.EntityFrameworkCore.Relational");
            if (relationalExtensionsType == null)
            {
                Logger.LogError("Could not find RelationalDatabaseFacadeExtensions type");
                return;
            }

            var getDbConnectionMethod = relationalExtensionsType.GetMethod("GetDbConnection", System.Reflection.BindingFlags.Static | System.Reflection.BindingFlags.Public);
            if (getDbConnectionMethod == null)
            {
                Logger.LogError("GetDbConnection extension method not found");
                return;
            }

            Logger.LogInformation("Found GetDbConnection extension method");

            var connectionObj = getDbConnectionMethod.Invoke(null, new[] { databaseObj });
            if (connectionObj is not System.Data.Common.DbConnection connection)
            {
                Logger.LogError("Failed to get DbConnection - returned type is not DbConnection");
                return;
            }

            Logger.LogInformation("Successfully got DbConnection: {ConnectionType}", connection.GetType().Name);

            var characterId = Character.GetId();

            if (connection.State != System.Data.ConnectionState.Open)
                await connection.OpenAsync();

            Logger.LogInformation("Database connection opened successfully");

            // Log BEFORE values
            Logger.LogInformation("BEFORE RELOAD - Experience: {Exp}, MasterExp: {MasterExp}, State: {State}", 
                Character.Experience, Character.MasterExperience, Character.State);

            // Reload Experience values and State (online status)
            using (var command = connection.CreateCommand())
            {
                command.CommandText = $@"
                    SELECT ""Experience"", ""MasterExperience"", ""State"" 
                    FROM data.""Character"" 
                    WHERE ""Id"" = '{characterId}'";

                Logger.LogInformation("Executing query: {Query}", command.CommandText);

                using var reader = await command.ExecuteReaderAsync();
                if (await reader.ReadAsync())
                {
                    var dbExp = reader.GetInt64(0);
                    var dbMasterExp = reader.GetInt64(1);
                    var dbState = reader.GetInt32(2);

                    Logger.LogInformation("DATABASE VALUES - Experience: {DbExp}, MasterExp: {DbMasterExp}, State: {DbState}", 
                        dbExp, dbMasterExp, dbState);

                    Character.Experience = dbExp;
                    Character.MasterExperience = dbMasterExp;
                    Character.State = (HeroState)dbState;

                    Logger.LogInformation("AFTER UPDATE - Experience: {Exp}, MasterExp: {MasterExp}, State: {State}", 
                        Character.Experience, Character.MasterExperience, Character.State);
                }
                else
                {
                    Logger.LogWarning("No character found in database with ID: {CharacterId}", characterId);
                }
            }

            // Log attribute count before reload
            var attrCount = Character.Attributes?.Count() ?? 0;
            Logger.LogInformation("Character has {AttrCount} attributes", attrCount);

            // Reload StatAttribute values for Level and all stats
            using (var command = connection.CreateCommand())
            {
                command.CommandText = $@"
                    SELECT sa.""DefinitionId"", sa.""Value""
                    FROM data.""StatAttribute"" sa
                    WHERE sa.""CharacterId"" = '{characterId}'
                    AND sa.""DefinitionId"" IN (
                        '560931ad-0901-4342-b7f4-fd2e2fcc0563',
                        '70cd8c10-391a-4c51-9aa4-a854600e3a9f',
                        '123282fe-fead-448e-ad2c-baece939b4b1',
                        '1ae9c014-e3cd-4703-bd05-1b65f5f94ceb',
                        '6ca5c3a6-b109-45a5-87a7-fdcb107b4982',
                        '01b0ef28-f7a0-46b5-97ba-2b624a54cd75'
                    )";

                Logger.LogInformation("Querying StatAttributes for character");

                using var reader = await command.ExecuteReaderAsync();
                int updatedCount = 0;
                while (await reader.ReadAsync())
                {
                    var definitionId = reader.GetGuid(0);
                    var value = reader.GetFloat(1);

                    Logger.LogInformation("StatAttribute from DB - Definition: {DefinitionId}, Value: {Value}", 
                        definitionId, value);

                    // Find the attribute in the collection and update it
                    var attr = Character.Attributes?.FirstOrDefault(a => a.Definition?.Id == definitionId);
                    if (attr != null)
                    {
                        Logger.LogInformation("Found attribute in collection, updating from {OldValue} to {NewValue}", 
                            attr.Value, value);
                        attr.Value = value;
                        updatedCount++;
                    }
                    else
                    {
                        Logger.LogWarning("Attribute with Definition {DefinitionId} NOT FOUND in Character.Attributes collection!", 
                            definitionId);
                    }
                }
                Logger.LogInformation("Updated {UpdatedCount} attributes from database", updatedCount);
            }

            Logger.LogInformation("=== RELOAD COMPLETE ===");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "ERROR during ReloadCharacterFromDatabaseAsync for character {CharacterName}", Character?.Name ?? "Unknown");
        }
    }

