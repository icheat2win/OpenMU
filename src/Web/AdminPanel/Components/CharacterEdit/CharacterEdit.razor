@using System.ComponentModel.DataAnnotations
@using MUnique.OpenMU.DataModel.Entities
@using MUnique.OpenMU.DataModel.Configuration
@using MUnique.OpenMU.Web.AdminPanel.Components.Form

<PageTitle>Edit Character: @Character.Name</PageTitle>

<style>
    /* Force dark theme for entire page */
    body {
        background-color: #0f172a !important;
        color: #f1f5f9 !important;
    }
    
    .character-edit-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #0f172a;
        min-height: 100vh;
    }
    
    .character-header {
        background: linear-gradient(135deg, #1e3a8a 0%, #7c3aed 100%);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    
    .character-header h1 {
        font-size: 2rem;
        font-weight: 600;
        color: #f1f5f9;
        margin: 0 0 8px 0;
    }
    
    .character-header p {
        color: #94a3b8;
        margin: 0;
        font-size: 0.875rem;
    }
    
    .section-card {
        background: #1e293b;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
    }
    
    .section-header {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 1.125rem;
        font-weight: 600;
        color: #f1f5f9;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .section-icon {
        color: #06b6d4;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }
    
    .form-field {
        margin-bottom: 0;
    }
    
    .form-field label {
        display: block;
        font-size: 0.75rem;
        font-weight: 500;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 8px;
    }
    
    .form-field input,
    .form-field select,
    .form-field .form-control {
        width: 100% !important;
        padding: 12px 16px !important;
        background: rgba(0, 0, 0, 0.3) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 12px !important;
        color: #f1f5f9 !important;
        font-size: 0.875rem !important;
        transition: all 0.2s !important;
        height: auto !important;
    }
    
    .form-field input:focus,
    .form-field select:focus,
    .form-field .form-control:focus {
        outline: none !important;
        border-color: rgba(6, 182, 212, 0.6) !important;
        box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1) !important;
        background: rgba(0, 0, 0, 0.4) !important;
    }
    
    /* Override Bootstrap placeholder color */
    .form-field input::placeholder,
    .form-field .form-control::placeholder {
        color: #64748b !important;
        opacity: 1 !important;
    }
    
    /* Style BlazoredTypeahead dropdowns */
    .form-field .blazored-typeahead__input {
        width: 100% !important;
        padding: 12px 16px !important;
        background: rgba(0, 0, 0, 0.3) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 12px !important;
        color: #f1f5f9 !important;
        font-size: 0.875rem !important;
    }
    
    .form-field .blazored-typeahead__input:focus {
        outline: none !important;
        border-color: rgba(6, 182, 212, 0.6) !important;
        box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1) !important;
        background: rgba(0, 0, 0, 0.4) !important;
    }
    
    .form-field small {
        display: block;
        margin-top: 6px;
        font-size: 0.75rem;
        color: #64748b;
    }
    
    .checkbox-field {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
    }
    
    .checkbox-field input[type="checkbox"] {
        width: auto;
        margin: 0;
    }
    
    .checkbox-field label {
        margin: 0;
        font-size: 0.875rem;
        color: #e2e8f0;
        text-transform: none;
        letter-spacing: normal;
    }
    
    .action-buttons {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 24px;
    }
    
    .btn-save {
        background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
        border: none;
        color: white;
        padding: 12px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 12px rgba(6, 182, 212, 0.25);
    }
    
    .btn-save:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 16px rgba(6, 182, 212, 0.35);
        filter: brightness(1.1);
    }
    
    .btn-cancel {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #cbd5e1;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: #64748b;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 16px;
    }

    /* Inventory Styles */
    .inventory-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .inventory-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 12px;
        padding: 16px;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 12px;
    }

    .stat-badge {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .stat-badge .stat-label {
        font-size: 0.75rem;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .stat-badge .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #06b6d4;
    }

    .inventory-grid {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .inventory-header {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr 100px;
        gap: 12px;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 600;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .inventory-item {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr 100px;
        gap: 12px;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        align-items: center;
        transition: all 0.2s;
    }

    .inventory-item:hover {
        background: rgba(0, 0, 0, 0.3);
        border-color: rgba(6, 182, 212, 0.5);
        transform: translateX(4px);
    }

    .item-name {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
    }

    .item-icon {
        font-size: 1.2rem;
    }

    .item-level .badge {
        font-size: 0.875rem;
        padding: 4px 8px;
    }

    .item-slot {
        color: #94a3b8;
        font-size: 0.875rem;
    }

    .item-options .badge {
        font-size: 0.75rem;
        padding: 4px 8px;
    }

    .item-actions {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .btn-icon {
        padding: 6px 10px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 1rem;
        background: rgba(255, 255, 255, 0.1);
    }

    .btn-icon:hover {
        transform: scale(1.1);
    }

    .btn-danger-sm {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .btn-danger-sm:hover {
        background: rgba(239, 68, 68, 0.4);
        border-color: rgba(239, 68, 68, 0.6);
    }

    .empty-state {
        text-align: center;
        padding: 48px 24px;
        color: #64748b;
    }

    .empty-icon {
        font-size: 4rem;
        display: block;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-state p {
        margin: 0;
        font-size: 1.125rem;
    }

    .inventory-actions {
        display: flex;
        justify-content: center;
        padding-top: 12px;
    }

    .btn-add-item {
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        color: white;
        box-shadow: 0 4px 14px rgba(6, 182, 212, 0.3);
        padding: 14px 32px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-add-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(6, 182, 212, 0.4);
    }

    .badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .badge-info {
        background: rgba(6, 182, 212, 0.2);
        color: #06b6d4;
        border: 1px solid rgba(6, 182, 212, 0.3);
    }

    .badge-success {
        background: rgba(16, 185, 129, 0.2);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.3);
    }

