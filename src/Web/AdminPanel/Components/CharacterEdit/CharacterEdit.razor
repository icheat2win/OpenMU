<style>
    /* Ensure all form inputs have dark text on light backgrounds */
    input, select, textarea, .form-control {
        color: #0f172a !important;
        background-color: #f8fafc !important;
    }
    
    /* Fix dropdown/select option text visibility */
    select option {
        color: #0f172a !important;
        background-color: white !important;
    }
    
    /* Fix Blazored Typeahead INPUT field - CRITICAL FIX */
    .blazored-typeahead input,
    .blazored-typeahead input[type="search"],
    input.blazored-typeahead__input,
    .blazored-typeahead__input {
        color: #0f172a !important;
        background-color: #f8fafc !important;
        border: 1px solid #cbd5e1 !important;
        padding: 0.75rem 1rem !important;
        border-radius: 0.5rem !important;
        font-size: 1rem !important;
        width: 100% !important;
        font-weight: 500 !important;
    }
    
    /* Fix the wrapper that might hide text */
    .blazored-typeahead,
    .blazored-typeahead > div,
    .blazored-typeahead__controls {
        color: #0f172a !important;
    }
    
    /* Make sure selected value is visible - CRITICAL FIX */
    .blazored-typeahead span,
    .blazored-typeahead a,
    .blazored-typeahead__selected-item,
    .blazored-typeahead .blazored-typeahead__input,
    .blazored-typeahead__controls > *,
    .blazored-typeahead__controls span,
    .blazored-typeahead__controls a {
        color: #0f172a !important;
        text-decoration: none !important;
        font-weight: 500 !important;
    }
    
    /* Force all child elements to have dark text */
    .blazored-typeahead * {
        color: #0f172a !important;
    }
    
    .blazored-typeahead input:focus,
    .blazored-typeahead input[type="search"]:focus {
        outline: none !important;
        border-color: #3b82f6 !important;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
    }
    
    /* Fix Blazored Typeahead dropdown items */
    .blazored-typeahead__results,
    .blazored-typeahead__result,
    .blazored-typeahead__result-selected {
        color: #0f172a !important;
        background-color: white !important;
    }
    
    .blazored-typeahead__result:hover {
        background-color: #e0f2fe !important;
        color: #0c4a6e !important;
    }
    
    /* Style dropdown container */
    .blazored-typeahead__results-container {
        background-color: white !important;
        border: 1px solid #cbd5e1 !important;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1) !important;
        border-radius: 0.5rem !important;
        margin-top: 0.25rem !important;
        max-height: 300px !important;
        overflow-y: auto !important;
        z-index: 1000 !important;
    }
    
    /* Ensure wrapper doesn't override */
    .blazored-typeahead {
        width: 100% !important;
    }
    
    /* Fix any NavLink in the typeahead - FORCE DARK TEXT */
    .blazored-typeahead a.nav-link,
    .blazored-typeahead a,
    .blazored-typeahead__controls a,
    .blazored-typeahead__controls a.nav-link,
    a.nav-link {
        color: #0f172a !important;
        font-weight: 500 !important;
        text-decoration: none !important;
    }
    
    .blazored-typeahead a:hover,
    .blazored-typeahead a.nav-link:hover {
        color: #1e40af !important;
        text-decoration: underline !important;
    }
    
    /* Style helper text */
    small {
        color: #64748b !important;
        font-size: 0.75rem !important;
        display: block !important;
        margin-top: 0.25rem !important;
    }
    
    /* ItemTable modern styling */
    .card {
        background: white;
        border-radius: 0.75rem;
        border: 1px solid #e2e8f0;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }
    
    .card-header {
        background: linear-gradient(to right, #f8fafc, #f1f5f9);
        border-bottom: 2px solid #cbd5e1;
        padding: 1rem 1.5rem;
        font-weight: 600;
        color: #1e293b;
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .card-text table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .card-text table thead tr {
        background: linear-gradient(to right, #f1f5f9, #e2e8f0);
        border-bottom: 2px solid #cbd5e1;
    }
    
    .card-text table thead th {
        padding: 0.75rem 1rem;
        text-align: left;
        font-weight: 600;
        color: #475569;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    .card-text table tbody tr {
        border-bottom: 1px solid #e2e8f0;
        transition: background-color 0.15s ease;
    }
    
    .card-text table tbody tr:hover {
        background-color: #f8fafc;
    }
    
    .card-text table tbody td {
        padding: 1rem;
        color: #1e293b;
    }
    
    .card-text table tfooter tr {
        background: #f8fafc;
        border-top: 2px solid #cbd5e1;
    }
    
    .card-text table tfooter td {
        padding: 1rem 1.5rem;
    }
    
    /* Button styling for ItemTable */
    .btn-primary, .primary-button {
        background: linear-gradient(to right, #3b82f6, #8b5cf6);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 0.5rem;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-primary:hover, .primary-button:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    }
    
    .btn-info {
        background: linear-gradient(to right, #06b6d4, #0ea5e9);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-info:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(6, 182, 212, 0.4);
    }
    
    .btn-danger, .btn-warning {
        background: linear-gradient(to right, #ef4444, #dc2626);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-danger:hover, .btn-warning:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
    }
    
    .btn-outline-info {
        background: white;
        color: #0ea5e9;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: 500;
        border: 2px solid #0ea5e9;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-outline-info:hover {
        background: #0ea5e9;
        color: white;
    }
    
    /* Collapse button spacing */
    .ml-3 {
        margin-left: 0.75rem;
    }
    
    .mb-1 {
        margin-bottom: 0.25rem;
    }
</style>

