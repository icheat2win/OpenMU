@using System.ComponentModel.DataAnnotations
@using MUnique.OpenMU.DataModel.Entities
@using MUnique.OpenMU.Persistence

<PageTitle>Edit Account: @Account.LoginName</PageTitle>

<div class="min-h-screen bg-slate-50 py-6 px-4">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl shadow-lg p-8 mb-6 text-white">
            <h1 class="text-4xl font-bold mb-2 flex items-center gap-3">
                <span>üë§</span> Edit Account
            </h1>
            <p class="text-blue-100">@Account.LoginName ‚Ä¢ Registered @Account.RegistrationDate.ToShortDateString()</p>
        </div>

        <EditForm Model="Account" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            
            <!-- Basic Information -->
            <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
                <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                    <span>üìã</span>
                    <span>Basic Information</span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Login Name</label>
                        <InputText @bind-Value="@Account.LoginName" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" maxlength="10" />
                        <ValidationMessage For="@(() => Account.LoginName)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">E-Mail Address</label>
                        <InputText @bind-Value="@Account.EMail" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" type="email" />
                        <ValidationMessage For="@(() => Account.EMail)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Account State</label>
                        <InputSelect @bind-Value="@Account.State" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors">
                            @foreach (var state in Enum.GetValues<AccountState>())
                            {
                                <option value="@state">@state</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => Account.State)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Registration Date</label>
                        <InputDate @bind-Value="@Account.RegistrationDate" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                        <ValidationMessage For="@(() => Account.RegistrationDate)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Time Zone (UTC Offset)</label>
                        <InputNumber @bind-Value="@Account.TimeZone" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                        <ValidationMessage For="@(() => Account.TimeZone)" />
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                    <div class="flex items-center gap-3 p-4 bg-slate-50 rounded-lg border border-slate-200 hover:border-blue-300 transition-colors cursor-pointer">
                        <InputCheckbox @bind-Value="@Account.IsVaultExtended" class="w-5 h-5 text-blue-500 rounded" />
                        <label class="font-medium text-slate-700 cursor-pointer">üîí Extended Vault</label>
                    </div>

                    <div class="flex items-center gap-3 p-4 bg-slate-50 rounded-lg border border-slate-200 hover:border-blue-300 transition-colors cursor-pointer">
                        <InputCheckbox @bind-Value="@Account.IsTemplate" class="w-5 h-5 text-blue-500 rounded" />
                        <label class="font-medium text-slate-700 cursor-pointer">üß™ Template Account (Testing)</label>
                    </div>
                </div>
            </div>

            <!-- Cash Shop Balance -->
            <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
                <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                    <span>üí∞</span>
                    <span>Cash Shop Balance</span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">WCoin C (Cash Coins)</label>
                        <InputNumber @bind-Value="@Account.WCoinC" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" min="0" />
                        <ValidationMessage For="@(() => Account.WCoinC)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">WCoin P (Prepaid Coins)</label>
                        <InputNumber @bind-Value="@Account.WCoinP" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" min="0" />
                        <ValidationMessage For="@(() => Account.WCoinP)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Goblin Points</label>
                        <InputNumber @bind-Value="@Account.GoblinPoints" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" min="0" />
                        <ValidationMessage For="@(() => Account.GoblinPoints)" />
                    </div>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
                <div class="flex items-center gap-3 text-2xl font-bold text-slate-900 mb-6 pb-4 border-b-2 border-blue-200">
                    <span>üîê</span>
                    <span>Security Settings</span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Security Code</label>
                        <InputText @bind-Value="@Account.SecurityCode" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" maxlength="10" />
                        <small class="block text-slate-500 text-xs mt-1">Used for character deletion and guild operations</small>
                        <ValidationMessage For="@(() => Account.SecurityCode)" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Vault Password</label>
                        <InputText @bind-Value="@Account.VaultPassword" class="w-full px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" maxlength="20" />
                        <small class="block text-slate-500 text-xs mt-1">Optional password for vault access</small>
                        <ValidationMessage For="@(() => Account.VaultPassword)" />
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Chat Ban Status</label>
                        @if (Account.ChatBanUntil.HasValue)
                        {
                            <div class="flex gap-3 items-center">
                                <InputDate @bind-Value="@Account.ChatBanUntil" class="flex-1 px-4 py-3 bg-slate-50 border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:border-blue-500 transition-colors" />
                                <button type="button" class="px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg whitespace-nowrap transition-colors font-medium" @onclick="@(() => Account.ChatBanUntil = null)">
                                    ‚úì Clear Ban
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="flex gap-3 items-center">
                                <div class="flex-1 px-4 py-3 bg-emerald-50 border border-emerald-300 rounded-lg text-emerald-600 font-medium">
                                    ‚úì No active chat ban
                                </div>
                                <button type="button" class="px-5 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-lg whitespace-nowrap transition-colors font-medium" @onclick="@(() => Account.ChatBanUntil = DateTime.UtcNow.AddDays(7))">
                                    ‚ö† Ban for 7 days
                                </button>
                            </div>
                        }
                        <ValidationMessage For="@(() => Account.ChatBanUntil)" />
                    </div>
                </div>
            </div>

            <!-- Characters -->
            <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6 mb-6">
                <div class="flex items-center justify-between mb-6 pb-4 border-b-2 border-blue-200">
                    <div class="flex items-center gap-3 text-2xl font-bold text-slate-900">
                        <span>‚öîÔ∏è</span>
                        <span>Characters</span>
                    </div>
                    <span class="bg-indigo-100 text-indigo-700 px-4 py-2 rounded-full text-sm font-semibold">
                        @(Account.Characters?.Count ?? 0) Total
                    </span>
                </div>
                
                @if (Account.Characters != null && Account.Characters.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-slate-100">
                                    <th class="text-left py-4 px-4 text-xs font-bold text-slate-600 uppercase tracking-wider first:rounded-l-lg last:rounded-r-lg">Slot</th>
                                    <th class="text-left py-4 px-4 text-xs font-bold text-slate-600 uppercase tracking-wider">Name</th>
                                    <th class="text-left py-4 px-4 text-xs font-bold text-slate-600 uppercase tracking-wider">Class</th>
                                    <th class="text-left py-4 px-4 text-xs font-bold text-slate-600 uppercase tracking-wider">Level</th>
                                    <th class="text-left py-4 px-4 text-xs font-bold text-slate-600 uppercase tracking-wider">Status</th>
                                    <th class="text-left py-4 px-4 text-xs font-bold text-slate-600 uppercase tracking-wider first:rounded-l-lg last:rounded-r-lg">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="space-y-2">
                                @foreach (var character in Account.Characters.OrderBy(c => c.CharacterSlot))
                                {
                                    var level = GetCharacterLevel(character);
                                    var masterLevel = GetCharacterMasterLevel(character);
                                    <tr class="bg-slate-50 hover:bg-indigo-50 hover:translate-x-1 transition-all duration-200">
                                        <td class="py-4 px-4 first:rounded-l-lg">
                                            <span class="inline-block px-3 py-1 bg-slate-200 text-slate-700 rounded-md text-xs font-semibold uppercase tracking-wide">@character.CharacterSlot</span>
                                        </td>
                                        <td class="py-4 px-4">
                                            <div class="font-semibold text-slate-900">@character.Name</div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <div class="text-slate-600 text-sm">@(character.CharacterClass?.Name ?? "Unknown")</div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <span class="inline-block px-3 py-1 bg-sky-100 text-sky-600 rounded-md text-xs font-semibold uppercase tracking-wide">Lv @level</span>
                                            @if (masterLevel > 0)
                                            {
                                                <span class="inline-block px-3 py-1 bg-amber-100 text-amber-600 rounded-md text-xs font-semibold uppercase tracking-wide ml-1">ML @masterLevel</span>
                                            }
                                        </td>
                                        <td class="py-4 px-4">
                                            @switch (character.CharacterStatus)
                                            {
                                                case CharacterStatus.Normal:
                                                    <span class="inline-block px-3 py-1 bg-emerald-100 text-emerald-700 rounded-md text-xs font-semibold uppercase tracking-wide">‚úì Normal</span>
                                                    break;
                                                case CharacterStatus.Banned:
                                                    <span class="inline-block px-3 py-1 bg-red-100 text-red-700 rounded-md text-xs font-semibold uppercase tracking-wide">‚úñ Banned</span>
                                                    break;
                                                case CharacterStatus.GameMaster:
                                                    <span class="inline-block px-3 py-1 bg-indigo-100 text-indigo-700 rounded-md text-xs font-semibold uppercase tracking-wide">‚òÖ GM</span>
                                                    break;
                                                default:
                                                    <span class="inline-block px-3 py-1 bg-slate-100 text-slate-700 rounded-md text-xs font-semibold uppercase tracking-wide">@character.CharacterStatus</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="py-4 px-4 last:rounded-r-lg">
                                            <a href="/edit-account/@Account.GetId()/@(typeof(Character).FullName)/@character.GetId()" 
                                               class="inline-block px-5 py-2 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg font-semibold text-sm hover:shadow-lg hover:-translate-y-0.5 transition-all">
                                                ‚úèÔ∏è Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="bg-sky-50 border border-sky-200 rounded-xl p-8 text-center">
                        <div class="text-5xl mb-4">üë§</div>
                        <div class="font-semibold text-sky-800 mb-2">No characters found</div>
                        <div class="text-sm text-sky-600">This account doesn't have any characters yet.</div>
                    </div>
                }
            </div>

            <ValidationSummary />
            <div class="flex gap-4 justify-end mt-6">
                @if (OnCancel.HasDelegate)
                {
                    <button type="button" class="px-8 py-3 bg-slate-200 text-slate-700 rounded-lg font-semibold hover:bg-slate-300 transition-colors" @onclick="OnCancel">Cancel</button>
                }
                <button type="submit" class="px-8 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-lg font-semibold hover:shadow-xl hover:-translate-y-0.5 transition-all">üíæ Save Changes</button>
            </div>
        </EditForm>
        </div>
</div>

@code {
    /// <summary>
    /// Gets or sets the account being edited.
    /// </summary>
    [Parameter]
    [Required]
    public Account Account { get; set; } = null!;

    /// <summary>
    /// Gets or sets the <see cref="EditForm.OnValidSubmit"/> event callback.
    /// </summary>
    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

    /// <summary>
    /// Gets or sets the task which should be executed when the cancel button gets clicked.
    /// </summary>
    [Parameter]
    public EventCallback OnCancel { get; set; }

    private int GetCharacterLevel(Character character)
    {
        try
        {
            // Try to get level from Attributes collection
            if (character.Attributes != null)
            {
                var levelAttr = character.Attributes.FirstOrDefault(a => a.Definition?.Designation == "Level");
                if (levelAttr != null)
                {
                    return (int)levelAttr.Value;
                }
            }
            
            // Fallback: calculate from experience (if available)
            // This is a rough estimation - actual formula may vary
            return 0;
        }
        catch
        {
            return 0;
        }
    }

    private int GetCharacterMasterLevel(Character character)
    {
        try
        {
            // Try to get master level from Attributes collection
            if (character.Attributes != null)
            {
                var masterLevelAttr = character.Attributes.FirstOrDefault(a => a.Definition?.Designation == "Master Level");
                if (masterLevelAttr != null)
                {
                    return (int)masterLevelAttr.Value;
                }
            }
            
            return 0;
        }
        catch
        {
            return 0;
        }
    }
}
